<h1> Add opportunity </h1>

<%= form_for @opportunity do |f| %>
<p>
	<label> Code </label>
	<%= f.text_field :code, :class => "text" %>
</p>
<p>
	<label> Company </label>
	<%= f.text_field :company, :class => "text" %>
</p>
<p>
	<label> Address </label>
	<%= f.text_field :address, :class => "text" %>
</p>
<p>
	<label> Salary </label>
	<%= f.text_field :salary, :class => "text" %>
</p>
<p>
	<label> Start Date </label>
	<%= f.text_field :start_date, :class => "text" %>
</p>
<p>
	<label> End Date </label>
	<%= f.text_field :end_date, :class => "text" %>
</p>
<p>
	<label> Requirements </label>
	<%= f.text_field :requirements, :class => "text" %>
</p>
<p>
	<%= button_tag(type: "submit", :class => "btn", :id => "add_opportunity_button") do %>
    Add opportunity
	<% end %>
	<!-- or <%= link_to "Cancel", opportunities_path %> -->
	or <%= link_to "Cancel", opportunities_path, :class => "btn" %>

</p>
<% end %>